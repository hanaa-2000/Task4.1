<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Lifecycle">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:background="#B8CCD6"
        >

    <LinearLayout
        android:id="@+id/linear3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginTop="2dp"
        android:background="#CBD5D8"
        >

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/imgecirclar"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/images__43_"
            app:civ_border_color="#3f51b5"
            app:civ_border_width="4dp"
            app:civ_shadow="true"
            app:civ_shadow_color="#3f51b5"
            app:civ_shadow_radius="10dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="180dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="-100dp"
            android:layout_toEndOf="@id/imgecirclar"
            android:text="Hanaa NasseF"
            android:textColor="#222"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            tools:ignore="RtlCompat"
            />

        <ImageView
            android:id="@+id/imageba"
            android:layout_width="385dp"
            android:layout_height="260dp"
            android:layout_marginTop="90dp"
            android:background="@drawable/images__33_"
            android:gravity="center"
            />


       
    </LinearLayout>

        <Button
            android:id="@+id/btn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/back2"
            android:text="Back" />

    </LinearLayout>


</ScrollView>